<div id="itemRow{{item_id}}" class="row my-3 px-4">
    <div class="col-1">
        <button class="acds-element" onclick="deleteItemClick(event, {{item_id}});"><i class="bi bi-trash"></i></button>
    </div>
    <div class="col">
        <div id="itemName{{item_id}}" class="acds-element">
            {{name}}
        </div>
    </div>
    <div class="col">
        <input id="itemDescription{{item_id}}" class="acds-element" type="text" value="{{description}}"
            style="width: 100%; border: none; color: lightgray;" onchange="itemDescriptionChange(event, {{item_id}})">
    </div>
</div>