<div class="row">
    <script>const specs = new Map();</script>
    {{#each specs}}
    {{#with this}}
    <div id="specLabel-{{spec_id}}" class="col">{{name}}</div>
    <script>specs.set('{{name}}', '{{value}}');</script>
    {{/with}}
    {{/each}}
</div>
<div class="row">
    {{#each specs}}
    {{#with this}}
    <div class="col">
        <input class="acds-spec acds-element acds-bottom-text" type="text" id="spec-{{spec_id}}" value="{{value}}"
            style="text-align: center; max-width: 120px; font-size: 25px;" onchange="specChange(event, {{spec_id}})">
    </div>
    {{/with}}
    {{/each}}
</div>